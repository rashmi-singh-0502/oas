<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
             http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">

	<persistence-unit name="OnlineAdvertisePU">
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		<class>com.cg.oas.entity.AdvertiseEntity</class>
		<!-- <class>com.cg.oas.entity.CategoryEntity</class>
		<class>com.cg.oas.entity.UserEntity</class> -->
		<properties>
			<property name="hibernate.connection.url" value="jdbc:postgresql://localhost/ol_ad" />
			<property name="hibernate.connection.driver_class" value="org.postgresql.Driver" />
			<property name="hibernate.connection.username" value="postgres" />
			<property name="hibernate.connection.password" value="9548" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />
		</properties>
	</persistence-unit>
	</persistence>